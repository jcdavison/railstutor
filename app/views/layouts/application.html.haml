%head
  - if content_for? :head
    = content_for :head
  - else
    %title Master Ruby on Rails fundamentals, Grasp concepts in fun small groups, Learn from an expert tutor.  
  %meta{ :charset => "utf-8" }
  %meta{ :property => "og:image", content: "http://www.rubyonrailstutor.com/assets/railstutorsplash.png" }
  %meta{ :property => "og:url", content: "http://www.rubyonrailstutor.com" }
  %meta{ :property => "og:title", content: "Ruby on Rails Tutor, learn the fundamentals of Rails in a small group from a personable tutor." }
  %meta{ :property => "og:type", content: "website" }

  -# Uncomment to make IE8 render like IE7
  -# meta http-equiv="X-UA-Compatible" content="IE=7"

  -# Set the viewport width to device width for mobile
  %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }

  = stylesheet_link_tag "application"
  = javascript_include_tag "vendor/custom.modernizr"
  = render 'layouts/mixpanel'
  = csrf_meta_tag

%body
  = yield
  = render "layouts/googleanalytics"
  = render "layouts/facebook"
  = render "layouts/twitter"
  -# = render 'layouts/adespresso'
  = render :partial => 'stripe/js'
  - unless request.fullpath == "/" || request.fullpath == "/apply"
    = render "layouts/disqus"
  = render "layouts/footer"
  = javascript_include_tag "application"
  :javascript
    tracker = new Tracker(mixpanel)
